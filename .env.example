# ===================================
# CONFIGURACIÓN GENERAL
# ===================================
APP_NAME=Tesla Cotizador
APP_VERSION=3.0.0
DEBUG=True
ENVIRONMENT=development

# ===================================
# BASE DE DATOS
# ===================================
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/tesla_cotizador
DATABASE_ECHO=False

# Para Docker (cambiar 'localhost' por 'db'):
# DATABASE_URL=postgresql://postgres:postgres@db:5432/tesla_cotizador

# ===================================
# GEMINI AI (¡IMPORTANTE!)
# ===================================
GEMINI_API_KEY=tu_api_key_aqui_desde_google_ai_studio
GEMINI_MODEL=gemini-1.5-pro

# Obtén tu API Key gratis en:
# https://makersuite.google.com/app/apikey

# ===================================
# ARCHIVOS Y STORAGE
# ===================================
UPLOAD_DIR=./storage/documentos
MAX_FILE_SIZE=10485760
ALLOWED_EXTENSIONS=pdf,docx,doc,xlsx,xls,txt,jpg,jpeg,png

# ===================================
# SEGURIDAD
# ===================================
SECRET_KEY=cambia_esto_por_una_clave_super_segura_y_larga_minimo_32_caracteres
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Genera una SECRET_KEY segura con:
# python -c "import secrets; print(secrets.token_urlsafe(32))"

# ===================================
# CORS (Frontend URLs permitidas)
# ===================================
CORS_ORIGINS=http://localhost:3000,http://localhost:3001,http://127.0.0.1:3000

# ===================================
# VECTOR DATABASE (ChromaDB)
# ===================================
CHROMA_PERSIST_DIRECTORY=./storage/chroma_db

# Para Docker:
# CHROMA_HOST=chromadb
# CHROMA_PORT=8000

# ===================================
# REACT FRONTEND
# ===================================
REACT_APP_API_URL=http://localhost:8000
REACT_APP_NAME=Tesla Cotizador

# ===================================
# DOCKER
# ===================================
COMPOSE_PROJECT_NAME=tesla-cotizador

# ===================================
# DESARROLLO
# ===================================
# Descomentar para desarrollo local:
# PYTHONDONTWRITEBYTECODE=1
# PYTHONUNBUFFERED=1